<div class="tools">
	<ul>
		<li id="tool_sendpm"><div><a href="#">Send PM</a></div></li>
		<li id="tool_privatechat"><div><a href="#">Private Chat</a></div></li>
		<li id="tool_userinfo"><div><a href="#">User Info</a></div></li>
		<li id="tool_changename"><div><a href="#">Change Name</a></div></li>
	</ul>
</div>
<% end %>
