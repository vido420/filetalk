<% view :loginView do %>
<div id="connection_data">
<% form_view :loginForm do %>
	<div class="group">
		<h4><%= loc(%(Login_Account_Details)) %>:</h4>
		<div class="col1">
			<span class="input_label"><label for="loginName"><%= loc(%(Login_Name)) %>: </label></span>
			<span class="input_label"><label for="loginPassword"><%= loc(%(Login_Password)) %>: </label></span>
		</div>
		<div class="col2">
			<%= text_field_view :loginName, :hint => loc(%(Login_Name)) %>
			<%= password_field_view :loginPassword, :hint => loc(%(Login_Password)) %>
		</div>
	</div>
	<div class="group">
		<%= button_view :label => loc(%(Login_Button)), :default => true,
						:enabled => true, :action => 'Frontend.loginController.login' %>
	</div>
<% end %>
</div>
<% end %>
